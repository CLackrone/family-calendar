<h3><%= @event.name.capitalize %></h3>

<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>


Attendees: <br>
<% @event.family_members.each do |f| %>
  <%= link_to f.name, family_member_path(f) %><br>
<% end %>
Time: <%= @event.time %><br>
Location: <%= @event.location %><br>
Category: <%= link_to @event.category.name, category_path(@event.category) %><br><br>
<%= link_to "Edit", edit_event_path(@event) %> | <%= link_to "Delete", event_path(@event), method: :delete %><br><br>


