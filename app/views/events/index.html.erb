<h1>Events</h1>

<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>

<% if @events != [] %>
  <% @events.uniq.each do |e| %>
      <%= link_to e.name, event_path(e) %><br>
  <% end %>
<% else %>
  <p>You have no events.</p>
<% end %><br><br>

<%= link_to "Create event", new_event_path %><br><br>

